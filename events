);
focusBlurInput.addEventListener('blur', function()
);


/*Eventos gerais de tempo:
setTimeout: aciona uma função após um certo tempo decorrido.
setInterval: aciona repetidamente uma função em intervalos especificados.*/

//Eventos de tempo:
setTimeout(function(){
  alert('Este alerta aparece após 3 segundos!');
}, 3000);

setInterval(function(){
  console.log('Este log aparece a cada 5 segundos');
}, 5000);





















